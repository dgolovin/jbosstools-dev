<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
   http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jboss.tools.dev</groupId>
	<artifactId>full-build</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<streamLogs>true</streamLogs>
		<skipTests>true</skipTests>
		<tpcKind>unified</tpcKind>
		<tycho.localArtifacts>default</tycho.localArtifacts>
		<settingsFile>${project.basedir}/../settings.xml</settingsFile>
		<skipITests>true</skipITests>
		<projectsDirectory>${project.basedir}/../../</projectsDirectory>
		<mavenOpts>-Xmx4096m</mavenOpts>
	</properties>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-invoker-plugin</artifactId>
				<version>1.6</version>
				<configuration>
					<debug>false</debug>
					<localRepositoryPath>${projectsDirectory}/.m2</localRepositoryPath>
					<streamLogs>${streamLogs}</streamLogs>
					<goals>
						<goal>clean</goal>
						<goal>install</goal>
					</goals>
					<properties>
						<skipTests>${skipTests}</skipTests>
						<skipITests>${skipITests}</skipITests>
						<tpc.targetKind>${tpcKind}</tpc.targetKind>
						<tycho.localArtifacts>${tycho.localArtifacts}</tycho.localArtifacts>
					</properties>
					<projectsDirectory>${projectsDirectory}</projectsDirectory>
					<settingsFile>${settingsFile}</settingsFile>
				</configuration>

				<executions>
					<execution>
						<id>build-target-platform</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-target-platforms/jbosstools/${tpcKind}/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
					</execution>

					<execution>
						<id>build-parent</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-build/parent/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
					</execution>

					<execution>
						<id>build-base</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-base/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
					</execution>

					<execution>
						<id>build-arquillian</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-arquillian/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
					</execution>

					<execution>
						<id>build-central</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-central/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
					</execution>

					<execution>
						<id>build-birt</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-birt/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
					</execution>

					<execution>
						<id>build-livereload</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-livereload/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
