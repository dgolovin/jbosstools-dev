							<pomIncludes>
								<pomInclude>jbosstools-javaee/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
					</execution>

					<execution>
						<id>build-openshift</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<pomIncludes>
								<pomInclude>jbosstools-openshift/pom.xml</pomInclude>
							</pomIncludes>
						</configuration>
