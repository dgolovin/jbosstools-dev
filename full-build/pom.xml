<project xmlns="http://maven.apache.org/POM/4.0.0" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
   http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <groupId>org.jboss.tools.dev</groupId>
   <artifactId>full-build</artifactId>
   <version>1.0.0-SNAPSHOT</version>
   <packaging>pom</packaging>
   <properties>
	<streamLogs>true</streamLogs>
	<skipTests>true</skipTests>
	<tpcKind>unified</tpcKind>
	<tycho.localArtifacts>default</tycho.localArtifacts>
   </properties>
   <build>
   <plugins>
   <plugin>
   <artifactId>maven-invoker-plugin</artifactId>
   <version>1.6</version>
      <configuration>
        <debug>false</debug>
	<localRepositoryPath>${invoker.projectsDirectory}/.m2</localRepositoryPath>
	<streamLogs>${streamLogs}</streamLogs>
 	<goals>
		<goal>clean</goal>
		<goal>install</goal>
	</goals>
	<properties>
		<skipTests>${skipTests}</skipTests>
		<tpc.targetKind>${tpcKind}</tpc.targetKind>
		<tycho.localArtifacts>${tycho.localArtifacts}</tycho.localArtifacts>
	</properties>
      </configuration>
      <executions>
         <execution>
            <id>full-build-exec</id>
            <goals>
               <goal>run</goal>
            </goals>
		<configuration>
	 <pomIncludes>
            <pomInclude>jbosstools-target-platforms/jbosstools/multiple/pom.xml</pomInclude> 
            <pomInclude>jbosstools-build/parent/pom.xml</pomInclude>
            <pomInclude>jbosstools-base/pom.xml</pomInclude>
            <pomInclude>jbosstools-hibernate/pom.xml</pomInclude>
            <pomInclude>jbosstools-server</pomInclude>
            <pomInclude>jbosstools-jst</pomInclude>
            <pomInclude>jbosstools-xulrunner</pomInclude>
            <pomInclude>jbosstools-vpe</pomInclude>
            <pomInclude>jbosstools-javaee</pomInclude>
            <pomInclude>jbosstools-arquillian</pomInclude>
            <pomInclude>jbosstools-birt</pomInclude>
            <pomInclude>jbosstools-webservices</pomInclude>
            <pomInclude>jbosstools-browsersim</pomInclude>
            <pomInclude>jbosstools-forge</pomInclude>
            <pomInclude>jbosstools-freemarker</pomInclude>
            <pomInclude>jbosstools-livereload</pomInclude>
            <pomInclude>jbosstools-openshift</pomInclude>
            <pomInclude>jbosstools-portlet</pomInclude>
            
         </pomIncludes>
                </configuration>
         </execution>

      </executions>
   </plugin>
   </plugins>
   </build>
</project>
